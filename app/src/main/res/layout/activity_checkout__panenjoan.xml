<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F8"
    tools:context=".Checkout_PanenjoanAct">

    <View
        android:id="@+id/view"
        android:layout_width="420dp"
        android:layout_height="205dp"
        android:background="@drawable/panenjoan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LLdetail_panenjoan"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panenjoan Jatigede"
            android:fontFamily="@font/msemibold"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/greenprimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabupaten Sumedang"
            android:fontFamily="@font/msemibold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/greenprimer"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:text="@string/desc_panenjoan"
            android:textSize="12sp"
            android:gravity="center"


            />

    </LinearLayout>




    <View
        android:id="@+id/view3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_circle_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circlePanenjoan" />
    <ImageView
        android:id="@+id/circlePanenjoan"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/panenjoan_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <LinearLayout
        android:id="@+id/LLdetail2_panenjoan"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLdetail_panenjoan" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >
        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/location"
            />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jemah, Kecamatan Jatigede, Kabupaten Sumedang"
               android:fontFamily="@font/mregular"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/family"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cocok Untuk Liburan Keluarga"
                android:fontFamily="@font/mregular"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/photography"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spot Foto Terbaik"
                android:fontFamily="@font/mregular"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_panenjoandetail"
        android:text="LIHAT GALERI FOTO"
        android:fontFamily="@font/mmedium"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_primaryhijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLdetail2_panenjoan" />

</androidx.constraintlayout.widget.ConstraintLayout>