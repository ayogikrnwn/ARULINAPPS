<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#F9F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/travel"

            />

        <TextView
            android:id="@+id/txtnama2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/msemibold"
            android:text="Hi,"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtnama"
            android:layout_width="174dp"
            android:layout_height="19dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/msemibold"
            android:text="AYOGI KURNIAWAN"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/about"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/about" />

    </LinearLayout>

    <TextView
        android:id="@+id/maupiknik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/msemibold"
        android:text="MAU PIKNIK KEMANA?"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maupiknik">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="233dp"

        android:layout_height="179dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maupiknik">

        <LinearLayout
            android:id="@+id/LLpanenjoan"
            android:layout_width="233dp"
            android:layout_height="179dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/bg_layout_white"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/maupiknik">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ftpanenjoan" />


            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLbatudua"
            android:layout_width="233dp"
            android:layout_height="179dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/bg_layout_white"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/maupiknik">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ftbatdu" />


            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLkampkar"
            android:layout_width="233dp"
            android:layout_height="179dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/bg_layout_white"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/maupiknik">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ftkampkar" />


            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LLnangorak"
            android:layout_width="233dp"
            android:layout_height="179dp"
            android:layout_marginLeft="10dp"

            android:background="@drawable/bg_layout_white"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/maupiknik">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/ftnangorak" />


            />
        </LinearLayout>
    </LinearLayout>
    </HorizontalScrollView>


            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/msemibold"
                android:text="KAMU HARUS TAU!"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info">

                <LinearLayout
                    android:id="@+id/LLsejarah"
                    android:layout_width="313dp"
                    android:layout_height="90dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn_edtprof"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info">

                    <ImageView
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/find" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/mregular"
                        android:text="Sejarah Sumedang"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLmakanan"
                    android:layout_width="313dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn_edtprof"
                    android:orientation="horizontal"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info">

                    <ImageView
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/tofu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/mregular"
                        android:gravity="center"
                        android:text="MAKANAN KHAS\nSUMEDANG"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLhotel"
                    android:layout_width="313dp"
                    android:layout_height="90dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn_edtprof"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info">

                    <ImageView
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/hotel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/mregular"
                        android:gravity="center"
                        android:text="INFO PENGINAPAN"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>