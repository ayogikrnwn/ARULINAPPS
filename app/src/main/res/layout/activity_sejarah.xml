<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F8"
    tools:context="com.akbayogi.arulinapps.Sejarah">


    <View
        android:id="@+id/view"
        android:layout_width="420dp"
        android:layout_height="205dp"
        android:background="@drawable/binokasih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LLdetail_nangorak"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEJARAH"
            android:fontFamily="@font/msemibold"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/greenprimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabupaten Sumedang"
            android:fontFamily="@font/msemibold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/greenprimer"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sejarah"
            android:textSize="12sp"
            android:gravity="center"


            />

    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/bg_circle_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circlenangorak" />
    <ImageView
        android:id="@+id/circlenangorak"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/smd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/msemibold"
        android:text="Sumber : Kompasiana"
        android:textColor="@color/greenprimer"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLdetail_nangorak" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_primaryhijau"
        android:fontFamily="@font/mmedium"
        android:text="KEMBALI KE HOME"
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />
</androidx.constraintlayout.widget.ConstraintLayout>